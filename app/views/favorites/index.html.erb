<h1>Listing All of "The Beaten Paths" favorites</h1>

<table>
  <tr>
    <th>Name</th>
    <th>From</th>
    <th>To</th>
    <th>Looking For</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @favorites.each do |favorite| %>
  <tr>
    <td><%= favorite.name %></td>
    <td><%= favorite.from %></td>
    <td><%= favorite.to %></td>
    <td><%= favorite.searches.pluck("name").join(", ") %></td>
    <td><%= link_to 'Show', favorite %></td>
    <td><%= link_to 'Edit', edit_favorite_path(favorite) %></td>
    <td><%= link_to 'Destroy', favorite, method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

