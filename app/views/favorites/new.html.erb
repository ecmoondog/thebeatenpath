<div class="row">
  <div class="large-centered columns gm_search_box">
    <h3>Where would you like to go today?</h3>
    <hr>

<%= render 'form' %>

  </div>
</div>

<!-- if logged in , show previous favorites with link to show it -->

<% if !current_user.nil? %>
  <% @user.favorites.each do |favorite| %>
  <p><%= @favorite.name %></p>
  <p>Route: From <%= favorite.from %> to <%= favorite.to %> |
  <%= link_to 'Edit', edit_favorite_path(favorite.id) %> |
  <%= link_to 'Destroy', favorite_path(favorite.id), method: :delete %>
  <% end %>
<% end %>
